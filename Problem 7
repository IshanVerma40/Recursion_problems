#include <iostream>
using namespace std;

void timetaken(int currentheight,int x,int y,int z,float time) {

	if(currentheight>=z)//BASE CASE
		return time;

	currentheight=currentheight+x;
	time++;

	if(currentheight>=z)
		time+=(z-currentheight)/x;
	return time;

	currentheight=currentheight-y;
	time++;

	return timetaken(currentheight,x,y,z,time);
}
int main() {
	int currentheight=0;
	int z;//POLE HEIGHT
	cout<<"ENTER POLE HEIGHT:-->";
	cin>>z;
	int x;//SPEED AT WHICH MONKEY RIDE
	cout<<"ENTER SPEED PER MIN AT WHICH IT CLIMBS :-->";
	cin>>x;
	int y;//SLIPPING SPEED
	cout<<"ENTER SPEED PER MIN AT WHICH IT SLIPS DOWN :-->";
	cin>>y;

	float time=0;
	float a;
	a=timetaken(currentheight,x,y,z,time)

	  cout<<"the time taken:-->%f"<<



	  return 0;
}
